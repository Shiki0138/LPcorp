{
  "qaFramework": {
    "version": "2.0.0",
    "enterprise": true,
    "zeroErrorTarget": true,
    "standards": ["ISO-25010", "OWASP", "NIST"],
    "compliance": ["SOC2", "GDPR", "PCI-DSS"]
  },
  "testingLevels": {
    "unit": {
      "framework": "jest",
      "coverage": {
        "minimum": 95,
        "target": 98,
        "statements": 95,
        "branches": 90,
        "functions": 95,
        "lines": 95
      },
      "performance": {
        "maxTestTime": "100ms",
        "memoryLeakDetection": true,
        "concurrencyTesting": true
      }
    },
    "integration": {
      "framework": ["cypress", "playwright"],
      "apiTesting": "supertest",
      "databaseTesting": "testcontainers",
      "messagingTesting": "mockery"
    },
    "e2e": {
      "primaryFramework": "playwright",
      "crossBrowser": ["chrome", "firefox", "safari", "edge"],
      "devices": ["desktop", "tablet", "mobile"],
      "accessibility": "axe-core"
    },
    "performance": {
      "loadTesting": "k6",
      "stressTesting": "artillery",
      "benchmarks": {
        "responseTime": "<200ms",
        "throughput": ">1000rps",
        "errorRate": "<0.01%",
        "availability": ">99.99%"
      }
    },
    "security": {
      "framework": "jest-security",
      "staticAnalysis": "semgrep",
      "dependencyCheck": "snyk",
      "penetrationTesting": "zap"
    }
  },
  "qualityGates": {
    "commit": {
      "unitTests": "required",
      "linting": "required",
      "typeCheck": "required",
      "securityScan": "required"
    },
    "pullRequest": {
      "codeReview": "required",
      "integrationTests": "required",
      "performanceTests": "required",
      "securityReview": "required"
    },
    "deployment": {
      "e2eTests": "required",
      "loadTests": "required",
      "securityScan": "required",
      "rollbackPlan": "required"
    }
  },
  "monitoring": {
    "realTime": {
      "errorTracking": "sentry",
      "performanceMonitoring": "datadog",
      "securityMonitoring": "falco",
      "logAggregation": "elk"
    },
    "alerts": {
      "errorRate": ">0.01%",
      "responseTime": ">500ms",
      "availability": "<99.9%",
      "securityBreach": "immediate"
    }
  },
  "kpis": {
    "bugEscapeRate": "<0.01%",
    "testCoverage": ">95%",
    "performanceScore": ">95",
    "securityScore": "A+",
    "codeQuality": ">90",
    "mttr": "<15min",
    "deploymentSuccess": ">99%"
  }
}