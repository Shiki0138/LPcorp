# This file is generated by Lombok to prevent IntelliJ IDEA from suggesting
# that annotation processors should be enabled in the project settings.
config.stopBubbling = true

# Lombok configuration
lombok.addLombokGeneratedAnnotation = true
lombok.accessors.chain = true
lombok.accessors.fluent = false
lombok.anyConstructor.addConstructorProperties = false
lombok.equalsAndHashCode.callSuper = call
lombok.toString.callSuper = call
lombok.toString.includeFieldNames = true
lombok.log.fieldName = log

# Disable some experimental features
lombok.experimental.flagUsage = warning

# Configure specific annotations
lombok.getter.noIsPrefix = false
lombok.setter.flagUsage = warning
lombok.data.flagUsage = warning
lombok.value.flagUsage = warning
lombok.builder.flagUsage = warning
lombok.sneakyThrows.flagUsage = warning
lombok.synchronized.flagUsage = warning
lombok.cleanup.flagUsage = warning

# Null checks
lombok.nonNull.exceptionType = IllegalArgumentException

# Copy annotations
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Qualifier
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Value
lombok.copyableAnnotations += org.springframework.context.annotation.Lazy
lombok.copyableAnnotations += javax.annotation.Nonnull
lombok.copyableAnnotations += javax.annotation.Nullable
lombok.copyableAnnotations += javax.validation.constraints.NotNull
lombok.copyableAnnotations += javax.validation.constraints.Null