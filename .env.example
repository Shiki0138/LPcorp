# Environment Configuration
# Copy this file to .env and update with your actual values

# Node Environment
NODE_ENV=development

# Database
DB_USER=growth_ai
DB_PASSWORD=secure_password_change_me
DB_NAME=growth_ai_dev
DATABASE_URL=postgresql://growth_ai:secure_password_change_me@localhost:5432/growth_ai_dev

# Redis
REDIS_PASSWORD=redis_password_change_me
REDIS_URL=redis://:redis_password_change_me@localhost:6379

# JWT
JWT_SECRET=your_jwt_secret_change_me_to_random_string
JWT_EXPIRES_IN=7d

# API Keys (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here
DALLE_API_KEY=sk-your-dalle-api-key-here

# Optional API Keys
STABLE_DIFFUSION_API_KEY=
SENDGRID_API_KEY=
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Google APIs
GOOGLE_ANALYTICS_MEASUREMENT_ID=
GOOGLE_SEARCH_CONSOLE_API_KEY=

# URLs
API_URL=http://localhost:4000
WS_URL=ws://localhost:4000
FRONTEND_URL=http://localhost:3000

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=localhost:9000
MINIO_USE_SSL=false

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email
EMAIL_FROM=noreply@growth-ai.com
EMAIL_FROM_NAME=GROWTH AI

# Session
SESSION_SECRET=your_session_secret_change_me

# Features Flags
ENABLE_HEATMAP=true
ENABLE_AI_CHAT=true
ENABLE_EMAIL_REPORTS=true
ENABLE_LEGAL_CHECK=true

# Limits per plan
STARTER_LP_LIMIT=1
STANDARD_LP_LIMIT=3
PROFESSIONAL_LP_LIMIT=10

# API Usage Limits
STARTER_GPT4_LIMIT=10
STANDARD_GPT4_LIMIT=50
PROFESSIONAL_GPT4_LIMIT=200

STARTER_DALLE_LIMIT=5
STANDARD_DALLE_LIMIT=20
PROFESSIONAL_DALLE_LIMIT=100