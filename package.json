{
  "name": "lp-creation-qa-system",
  "version": "2.0.0",
  "description": "Enterprise-grade Quality Assurance System for LP Creation Platform",
  "main": "src/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:security": "jest --testPathPattern=security",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:performance": "k6 run tests/performance/qa-performance.test.js",
    "qa:all": "node scripts/qa/run-all-tests.js",
    "qa:gate": "node scripts/qa/quality-gates.js",
    "qa:monitor": "node scripts/qa/monitoring-setup.js",
    "qa:review": "node scripts/qa/peer-review-system.js",
    "qa:dashboard": "node scripts/qa/metrics-dashboard.js start",
    "qa:report": "node scripts/qa/metrics-dashboard.js report",
    "quality:commit": "node scripts/qa/quality-gates.js commit",
    "quality:pr": "node scripts/qa/quality-gates.js pullRequest",
    "quality:staging": "node scripts/qa/quality-gates.js staging",
    "quality:production": "node scripts/qa/quality-gates.js production"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "cheerio": "^1.1.2",
    "next": "^14.0.0",
    "openai": "^5.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^5.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "typescript": "^5.2.0"
  },
  "optionalDependencies": {
    "artillery": "^2.0.0",
    "k6": "^0.47.0",
    "semgrep": "^1.45.0",
    "snyk": "^1.1000.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/config/testing/jest.setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "qa",
    "quality-assurance",
    "testing",
    "enterprise",
    "landing-page",
    "automation",
    "ci-cd",
    "security",
    "performance",
    "monitoring"
  ],
  "author": "QA Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/company/lp-creation-qa.git"
  },
  "bugs": {
    "url": "https://github.com/company/lp-creation-qa/issues"
  },
  "homepage": "https://github.com/company/lp-creation-qa#readme"
}
